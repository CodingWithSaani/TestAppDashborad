<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainRL"
    tools:context=".MainActivity"
    android:background="@color/colorGolden"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/mainTV"
        android:text="@string/mainHeading"
        android:background="@color/colorMainHeading"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/innerRL"
        android:layout_below="@id/mainTV"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/csTV"
            android:text="@string/cs_department"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:background="@color/colorRed"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seTV"
            android:text="@string/se_department"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/csTV"
            android:padding="10dp"
            android:background="@color/colorRed"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itTV"
            android:text="@string/it_department"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/seTV"
            android:padding="10dp"
            android:background="@color/colorRed"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mainLogoIV"
        android:src="@drawable/logo_superior"
        android:layout_below="@id/innerRL"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        />



</RelativeLayout>